<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="clr-namespace:xamlSpinnersWPF"
	x:Class="xamlSpinnersWPF.MainWindow"
	x:Name="Window"
	Title="MainWindow">

	<Grid x:Name="LayoutRoot" Background="#FF3D3D3D" >

		<Grid Margin="100,0" >
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="0.15*"/>
				<ColumnDefinition Width="0.15*"/>
				<ColumnDefinition Width="0.15*"/>
				<ColumnDefinition Width="0.15*"/>
				<ColumnDefinition Width="0.15*"/>
			</Grid.ColumnDefinitions>
			<local:ucSpinnerCogs HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" Grid.Column="1"/>
			<local:ucSpinnerApple Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="2"/>
			<local:ucSpinnerPiston HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" Grid.Column="3"/>
			<local:ucSpinnerSwirl HorizontalAlignment="Center" Margin="0,9,-17,11" Grid.Column="4" Width="24" VerticalAlignment="Center"/>
			<local:ucSpinnerDotCircle HorizontalAlignment="Center" VerticalAlignment="Center" />
		</Grid>
	</Grid></Window>